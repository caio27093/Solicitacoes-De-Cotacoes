@model Projeto.Models.CadLoginViewModel
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;700;900&display=swap" rel="stylesheet">
    <!-- import do css -->
    <style>
        * {
            font-family: 'Red Hat Display', sans-serif;
        }

        html, body, main {
            height: 100%;
        }

        #panel-left {
            display: flex !important;
            align-items: center;
            background-color: #000066;
        }

        #panel-right {
            display: flex !important;
            align-items: center;
            background-color: white;
        }

        h1 {
            color: #fff;
            font-size: 60px;
            font-weight: 900;
        }

        h2 {
            color: #14274E;
            font-size: 40px;
            font-weight: 700;
        }

        .description {
            color: #fff;
            font-size: 24px;
            font-weight: 400;
        }

        #panel-left .logo-container svg {
            width: 220px;
        }


        #panel-right form input {
            background-color: unset;
            border: 0;
            border-bottom: 2px solid #394867;
            border-radius: 0;
            font-weight: 400;
        }

        .btn.btn-primary {
            border: 0 !important;
            border-radius: 50px !important;
            background-color: #1F43BD !important;
            padding: 15px 40px !important;
            color: #fff !important;
            font-weight: 400 !important;
        }

        .links a {
            color: #14274E;
        }

        @@media only screen and (max-width: 767px) {
            #panel-left {
                display: none !important;
            }
        }



        .flex-box {
            display: flex;
        }

        .container-box {
            background-color: yellow;
            height: 300px;
        }

        .content-box {
            background-color: black;
            color: white;
            text-align: center;
            width: 200px;
        }






    </style>

    <script>
        function CadLogin() {
            window.location.href = 'CadLogin';
        }
    </script>
</head>
<body class="container-fluid">

    <main class="row">

        <section class="col-md-6" id="panel-left">
            <div class="container align-self-center">
                <div class="row">
                    <h1 class="col-12 text-center">Cotação de exames online</h1>
                </div>
                <div class="row">
                    <p class="col-12 text-center description">
                        Solicite e receba cotações, datas e locais para realização dos seus exames!
                    </p>
                </div>
                <div class="row mt-5">
                    <div class="col-12 logo-container d-flex justify-content-center">

                    </div>
                </div>
            </div>
        </section>


        <section class="col-md-6" id="panel-right">
            <div class="container">
                <div class="row mb-5">
                    <h2 class="col-12 text-center">Entrar</h2>
                </div>
                <div class="row">
                    @using (Html.BeginForm ( "Logar", "Home", FormMethod.Post, new { @class = "col-12 col-md-8offset-md-2" } ))
                    {

                        <div class="form-group">
                            @Html.EditorFor( model => model.EMAIL, new { htmlAttributes = new { type = "email", @class = "form-control", placeholder = "E-mail" } } )
                            @Html.ValidationMessageFor( model => model.EMAIL, "", new { @class = "text-danger" } )

                        </div>
                        <div class="form-group">
                            @Html.EditorFor( model => model.SENHA, new { htmlAttributes = new { type = "password", @class = "form-control", placeholder = "Senha" } } )
                            @Html.ValidationMessageFor( model => model.SENHA, "", new { @class = "text-danger" } )
                        </div>
                        <div class="form-group text-center pt-4">
                            <a href="Home">
                                <input type="submit" class="btn btn-primary" value="Entrar">
                            </a>

                        </div>
                    }
                </div>
                <div class="row mt-5">
                    <div class="col-12 links text-center">
                        <div>
                            <a href="/Home/CadLogin">Criar conta</a>
                        </div>
                        <div>
                            <a href="/Home/EsqueciMinhaSenha">Esqueci minha senha</a>
                        </div>
                    </div>
                </div>

                @if (ViewData["success"] != null)
                {

                    <script>
                        alert('@ViewData["success"]')
                    </script>
                    

                }

                @if (ViewData["error"] != null)
                {
                    
                    <script>
                        alert('@ViewData["error"]')
                    </script>
                }

            </div>
        </section>

    </main>
</body>
</html>
